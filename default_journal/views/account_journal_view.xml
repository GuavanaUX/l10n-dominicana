<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="default_journal_invoice_form" model="ir.ui.view">
            <field name="name">default.journal.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="journal_id" options="{'no_create': True}" attrs="{'readonly':[('name','!=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>